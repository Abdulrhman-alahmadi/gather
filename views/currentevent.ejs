<% layout('layouts/boilerplate') %>


    <body>
        <title>Current event!</title>
        <div class="row row-cols-1 row-cols-md-2 g-4">

            <% for(let i=0 ; i<allEvents.length;i++) {%>
                <div class="col">
                    <div class="card">
                        <img src=<%=allEvents[i].image %>
                        onerror="this.src='https://res.cloudinary.com/eventboost/image/upload/v1594283388/website/wp/eventboost-facebook-og-home.jpg'"
                        class="card-img-top img-responsive" alt="image is not loading" >
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= allEvents[i].name %>
                            </h5>

                            <div class="row">
                                <div class="col">
                                    <p class="card-text"
                                        style="white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">
                                        <%= allEvents[i].description %>
                                    </p>
                                </div>
                                <div class="col">

                                    <div class="text-center d-flex justify-content-end mt-2"> <a
                                            href="/currentevent/<%= allEvents[i]._id %> "><button type="button"
                                                class="btn btn-success">View Event</button></a>

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>




        </div>

    </body>